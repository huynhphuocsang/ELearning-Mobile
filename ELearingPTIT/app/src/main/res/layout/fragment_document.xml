<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:padding="15px"
    android:background="#ECECEC"
    tools:context=".DocumentFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÀI LIỆU CHIA SẺ"
        android:textColor="#2980B9"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTenMon"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="CSDL Phân tán"
            android:textAlignment="viewStart"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" - "
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTenGV"
            android:layout_width="163dp"
            android:layout_height="25dp"
            android:text="Lưu Nguyễn Kỳ Thư"
            android:textAlignment="viewStart"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="Tên "
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:text="Người chỉnh sửa"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:text="Chỉnh sửa lần cuối"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewTL"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:orientation="horizontal"></ListView>

    <LinearLayout
        android:id="@+id/ThemThuMuc"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/anhfoder" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Thư Mục Mới "
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/TaiTepLen"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/anhfoder" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Tải Tệp Lên "
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>